#!/bin/bash

LINK=wlp98s0

case "$1" in
    start)
        openvpn3 session-start --config ntech
        sleep 2
        sudo resolvectl default-route $LINK false
        echo "VPN connected"
        ;;
    stop)
        openvpn3 session-manage --config ntech --disconnect
        sudo resolvectl default-route LINK true
        echo "VPN disconnected"
        ;;
    list)
        openvpn3 sessions-list
        resolvectl status
        ;;
    *)
        echo "Usage: $0 {start|stop|list}"
        exit 1
        ;;
esac
